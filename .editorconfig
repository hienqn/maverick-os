# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# C source and header files (PintOS style: 2-space indent)
[*.{c,h}]
indent_style = space
indent_size = 2
max_line_length = 80

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Perl scripts (used by PintOS test infrastructure)
[*.{pl,pm}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Git config files
[.git*]
indent_style = space
indent_size = 2

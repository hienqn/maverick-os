# -*- makefile -*-

# RISC-V specific build variables
ARCH = riscv64

# Phase 7: Full kernel with user programs, VM, and filesystem
kernel.bin: DEFINES += -DTHREADS -DUSERPROG -DVM -DFILESYS
KERNEL_SUBDIRS = threads devices lib lib/kernel userprog vm filesys
# Thread tests enabled for RISC-V
TEST_SUBDIRS = tests/threads
GRADING_FILE =
SIMULATOR = --qemu
